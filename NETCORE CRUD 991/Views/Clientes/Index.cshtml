@model IEnumerable<NETCORE_CRUD_991.Models.Entities.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<p>

</p>
<a asp-action="CrearEditar" class="btn btn-secondary btn-block"><i class="fas fa-backspace"></i> Crear Cliente</a>

<form asp-action="Index" method="post">
    <div class="form-actions no-color">
        <p>
            Filtro: <input type="text" name="busqueda" value="" placeholder="Buscar..." />
            <input type="submit" value="Buscar" class="btn btn-primary" />
            <a asp-action="Index">Mostrar todos los registros</a>
        </p>
    </div>
</form>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    <a asp-action="CrearEditar" class="text-primary" asp-route-id="@item.IdCliente"><i class="fas fa-user-edit"></i> Editar</a> |
                    <a asp-action="Detalle" class="text-info" asp-route-id="@item.IdCliente"><i class="fas fa-search-plus"></i> Detalle</a> |
                    <a asp-action="Eliminar" onclick="return confirm ('¿Desea eliminar este cliente?')" class="text-danger" asp-route-id="@item.IdCliente"><i class="fas fa-trash-alt"></i> Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
